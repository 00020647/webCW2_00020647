extends ../head.pug

block content
  .container
    h3.disclaimer This web application was created to fulfill Web Technology moduleâ€™s requirements and does not represent an actual company or service
    h4.studentId Student ID: 00020647
    h1.flashcard-title Flashcard List
    a.create-button(href="/flashcard/create") Create New Flashcard
    table.flashcard-table
      thead
        tr
          th.id-column ID
          th.phrase-column Phrase
          th.translation-column Translation
          th.category-column Category
          th.actions-column Actions
      tbody
        each flashcard in flashcards
          tr
            td.id-column= flashcard.id
            td.phrase-column= flashcard.flashcard.phrase
            td.translation-column= flashcard.flashcard.translation
            td.category-column= flashcard.flashcard.category
            td.actions-column
              a.update-button(href=`/flashcard/update/${flashcard.id}`) Update
              span &nbsp;
              a.delete-button.delete-link(href=`/api/flashcard/delete/${flashcard.id}`) Delete